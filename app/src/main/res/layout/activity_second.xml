<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">


    <androidx.appcompat.widget.Toolbar
        android:background="@drawable/back_scrol"
        android:id="@+id/tool_bar"
        app:layout_constraintHeight_percent="0.09"
        app:layout_constraintBottom_toTopOf="@id/scroll"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/back_menu"
            android:foreground="?selectableItemBackgroundBorderless"
            android:background="@drawable/back_btn_tol1"
            android:padding="8dp"
            android:src="@drawable/ic_back_svgrepo_com__1_"
            android:layout_width="45dp"
            android:layout_height="45dp"/>

        <TextView
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="27sp"
            android:text="Выбрать Флаг"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:id="@+id/scroll"
        android:background="@drawable/back_scrol"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tool_bar"
        app:layout_constraintVertical_bias="1.0">


        <LinearLayout
            android:paddingVertical="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/image_group"
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <ImageView
                    android:layout_marginLeft="20dp"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/uzbekistan"
                    android:layout_gravity="center_vertical"
                    android:layout_width="100dp"
                    android:layout_height="70dp"/>

                <ImageView
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/qozogiston"
                    android:layout_gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="70dp"/>

                <ImageView
                    android:layout_marginRight="20dp"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/argentina"
                    android:layout_gravity="end|center_vertical"
                    android:layout_width="100dp"
                    android:layout_height="70dp"/>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/image_group1"
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <ImageView
                    android:layout_marginLeft="20dp"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/uzbekistan"
                    android:layout_gravity="center_vertical"
                    android:layout_width="100dp"
                    android:layout_height="70dp"/>

                <ImageView
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/qozogiston"
                    android:layout_gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="70dp"/>

                <ImageView
                    android:layout_marginRight="20dp"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/argentina"
                    android:layout_gravity="end|center_vertical"
                    android:layout_width="100dp"
                    android:layout_height="70dp"/>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/image_group2"
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <ImageView
                    android:layout_marginLeft="20dp"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/uzbekistan"
                    android:layout_gravity="center_vertical"
                    android:layout_width="100dp"
                    android:layout_height="70dp"/>

                <ImageView
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/qozogiston"
                    android:layout_gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="70dp"/>

                <ImageView
                    android:layout_marginRight="20dp"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/argentina"
                    android:layout_gravity="end|center_vertical"
                    android:layout_width="100dp"
                    android:layout_height="70dp"/>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/image_group3"
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <ImageView
                    android:layout_marginLeft="20dp"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/uzbekistan"
                    android:layout_gravity="center_vertical"
                    android:layout_width="100dp"
                    android:layout_height="70dp"/>

                <ImageView
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/qozogiston"
                    android:layout_gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="70dp"/>

                <ImageView
                    android:layout_marginRight="20dp"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/argentina"
                    android:layout_gravity="end|center_vertical"
                    android:layout_width="100dp"
                    android:layout_height="70dp"/>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/image_group4"
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <ImageView
                    android:layout_marginLeft="20dp"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/uzbekistan"
                    android:layout_gravity="center_vertical"
                    android:layout_width="100dp"
                    android:layout_height="70dp"/>

                <ImageView
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/qozogiston"
                    android:layout_gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="70dp"/>

                <ImageView
                    android:layout_marginRight="20dp"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/argentina"
                    android:layout_gravity="end|center_vertical"
                    android:layout_width="100dp"
                    android:layout_height="70dp"/>

            </FrameLayout>




        </LinearLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>