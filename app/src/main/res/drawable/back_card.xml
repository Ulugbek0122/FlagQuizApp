<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <stroke android:color="#5EFF65" android:width="2.2dp"/>
            <solid android:color="#ED009E5E"/>
            <corners android:radius="30dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:color="@color/white" android:width="2.2dp"/>
            <solid android:color="#ED009E5E"/>
            <corners android:radius="30dp"/>
        </shape>
    </item>
</selector>